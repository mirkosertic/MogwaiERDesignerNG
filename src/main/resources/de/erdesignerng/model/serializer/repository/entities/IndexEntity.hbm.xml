<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="de.erdesignerng.model.serializer.repository.entities"
	default-lazy="false">

	<class name="IndexEntity" table="mogrep_indexes" select-before-update="true">

		<id name="id" >
			<generator class="native" />
		</id>
		<version name="version"/>
		
		<property name="systemId" not-null="true"/>		
		
		<property name="creationUser" not-null="true"/>
		<property name="creationDate" not-null="true"/>
		<property name="lastModificationUser" not-null="false"/>
		<property name="lastModificationDate" not-null="false"/>

		<property name="name" not-null="true"/>
		<property name="comment" not-null="false" type="text"/>
		
		<property name="type" not-null="true"/>
		
		<list name="attributes" cascade="all-delete-orphan" table="mogrep_indexes_attr">
			<key column="indexid" foreign-key="mogrep_indexes_attr_fk1"/>
			<list-index column="listindex" />
			<element column="attributeid" type="string" not-null="true"/>
		</list>

	</class>
</hibernate-mapping>