<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping
	package="de.erdesignerng.model.serializer.repository.entities"
	default-lazy="false">

	<class name="RelationEntity" table="mogrep_relations"
		select-before-update="true">

		<id name="id" >
			<generator class="native" />
		</id>
		<version name="version"/>
		
		<property name="systemId" not-null="true"/>		

		<property name="creationUser" not-null="true" />
		<property name="creationDate" not-null="true" />
		<property name="lastModificationUser" not-null="false" />
		<property name="lastModificationDate" not-null="false" />

		<property name="name" not-null="true" />
		<property name="comment" not-null="false" type="text"/>		

		<list name="properties" table="mogrep_relations_props" cascade="all-delete-orphan">
			<key column="relationid" foreign-key="mogrep_relations_props_fk1"/>
			<list-index column="listindex"/>
			<composite-element class="StringKeyValuePair">
				<property name="key" column="propname" not-null="true"/>
				<property name="value" column="propvalue" not-null="true"/>
			</composite-element>
		</list>
		
		<property name="importingTable" not-null="true"/>
		<property name="exportingTable" not-null="true"/>
		<property name="onDelete" not-null="true"/>
		<property name="onUpdate" not-null="true"/>
		
		<list name="mapping" table="mogrep_relations_map" cascade="all-delete-orphan">
			<key column="relationid" foreign-key="mogrep_relations_map_fk1"/>
			<list-index column="listindex"/>
			<composite-element class="StringKeyValuePair">
				<property name="key" column="exp_attribute_id" not-null="true"/>
				<property name="value" column="imp_attribute_id" not-null="true"/>
			</composite-element>
		</list>		
	</class>
</hibernate-mapping>