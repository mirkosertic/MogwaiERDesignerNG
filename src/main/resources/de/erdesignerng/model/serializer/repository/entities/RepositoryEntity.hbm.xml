<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="de.erdesignerng.model.serializer.repository.entities"
	default-lazy="false">

	<class name="RepositoryEntity" table="mogrep" select-before-update="true">

		<id name="id" >
			<generator class="native" />
		</id>
		<version name="version"/>
		
		<property name="systemId" not-null="true"/>		
		
		<property name="creationUser" not-null="true"/>
		<property name="creationDate" not-null="true"/>
		<property name="lastModificationUser" not-null="false"/>
		<property name="lastModificationDate" not-null="false"/>
		
		<property name="name" not-null="true"/>
		<property name="comment" type="text"/>
		<property name="dialect" not-null="true"/>
		
		<list name="domains" cascade="all-delete-orphan">
			<key column="repid" not-null="true" foreign-key="mogrep_domains_fk1"/>
			<list-index column="listindex"/>
			<one-to-many class="DomainEntity"/>
		</list>
		
		<list name="tables" cascade="all-delete-orphan">
			<key column="repid" not-null="true" foreign-key="mogrep_tables_fk1"/>
			<list-index column="listindex"/>
			<one-to-many class="TableEntity"/>
		</list>

		<list name="views" cascade="all-delete-orphan">
			<key column="repid" not-null="true" foreign-key="mogrep_views_fk1"/>
			<list-index column="listindex"/>
			<one-to-many class="ViewEntity"/>
		</list>

		<list name="relations" cascade="all-delete-orphan">
			<key column="repid" not-null="true" foreign-key="mogrep_relations_fk1"/>
			<list-index column="listindex"/>
			<one-to-many class="RelationEntity"/>
		</list>

		<list name="comments" cascade="all-delete-orphan">
			<key column="repid" not-null="true" foreign-key="mogrep_comments_fk1"/>
			<list-index column="listindex"/>
			<one-to-many class="CommentEntity"/>
		</list>

		<list name="subjectareas" cascade="all-delete-orphan">
			<key column="repid" not-null="true" foreign-key="mogrep_sa_fk1"/>
			<list-index column="listindex"/>
			<one-to-many class="SubjectAreaEntity"/>
		</list>

		<list name="changes" cascade="all-delete-orphan">
			<key column="repid" not-null="true" foreign-key="mogrep_change_fk1"/>
			<list-index column="listindex"/>
			<one-to-many class="ChangeEntity"/>
		</list>
		
		<list name="properties" table="mogrep_props" cascade="all-delete-orphan">
			<key column="repid" foreign-key="mogrep_props_fk1" />
			<list-index column="listindex"/>
			<composite-element class="StringKeyValuePair">
				<property name="key" column="propname" not-null="true"/>
				<property name="value" column="propvalue" not-null="true"/>
			</composite-element>
		</list>
		
	</class>
</hibernate-mapping>