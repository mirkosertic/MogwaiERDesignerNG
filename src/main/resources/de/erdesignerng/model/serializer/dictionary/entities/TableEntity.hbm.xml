<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping
	package="de.erdesignerng.model.serializer.dictionary.entities"
	default-lazy="false">

	<class name="TableEntity" table="mogdict_tables"
		select-before-update="true">

		<id name="systemId">
			<generator class="assigned" />
		</id>

		<version name="version" />

		<property name="creationUser" not-null="false" />
		<property name="creationDate" not-null="false" />
		<property name="lastModificationUser" not-null="false" />
		<property name="lastModificationDate" not-null="false" />

		<property name="name" not-null="true" />
		<property name="comment" not-null="false" />

		<list name="attributes" cascade="all-delete-orphan">
			<key column="tableid" />
			<list-index column="listindex" />
			<one-to-many class="AttributeEntity" />
		</list>

		<map name="properties" table="mogdict_tables_props" cascade="all-delete-orphan">
			<key column="tableid" />
			<map-key column="propname" type="string" />
			<element column="propvalue" type="string" />
		</map>
	</class>
</hibernate-mapping>