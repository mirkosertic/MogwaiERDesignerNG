<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping
	package="de.erdesignerng.model.serializer.dictionary.entities"
	default-lazy="false">

	<class name="CommentEntity" table="mogdict_comments"
		select-before-update="true">

		<id name="id" >
			<generator class="native" />
		</id>
		<version name="version"/>
		
		<property name="systemId" not-null="true"/>		

		<property name="creationUser" not-null="true" />
		<property name="creationDate" not-null="true" />
		<property name="lastModificationUser" not-null="false" />
		<property name="lastModificationDate" not-null="false" />

		<property name="comment" not-null="false" type="text"/>
		
		<list name="properties" table="mogdict_comments_props" cascade="all-delete-orphan">
			<key column="tableid" foreign-key="mogdict_comments_props_fk1"/>
			<list-index column="listindex"/>
			<composite-element class="StringKeyValuePair">
				<property name="key" column="propname" not-null="true"/>
				<property name="value" column="propvalue" not-null="true"/>
			</composite-element>
		</list>
		
	</class>
</hibernate-mapping>