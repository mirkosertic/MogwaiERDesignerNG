                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <taskdef classname="de.mogwai.common.i18n.XMLResourceBundleTask"
                                         name="XMLResourceBundle"/>
                                <XMLResourceBundle dest="src/main/resources" defaultLanguage="en" src="src/main/java"
                                                   encoding="ISO8859_1" javaEncoding="ISO8859_1">
                                    <fileset dir="src/main/resources">
                                        <include name="erdesigner.xml"/>
                                    </fileset>
                                </XMLResourceBundle>
                            </tasks>
                        </configuration>
                    </execution>
                    <execution>
                        <id>create-staging-area</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <copy todir="${staging.dir}">
                                    <fileset dir="${basedir}">
                                        <include name="*.sh"/>
                                        <include name="*.bat"/>
                                        <include name="*.txt"/>
                                        <include name="LICENSE"/>
                                    </fileset>
                                </copy>
                                <copy todir="${staging.dir}/src">
                                    <fileset dir="${basedir}/src">
                                        <include name="**/*.java"/>
                                        <include name="**/*.xml"/>
                                        <include name="**/*.xsd"/>
                                        <include name="**/*.properties"/>
                                        <include name="**/*.png"/>
                                        <include name="**/*.gif"/>
                                        <include name="**/*.jpg"/>
                                        <include name="**/*.mxm"/>
                                        <include name="**/*.sql"/>
                                    </fileset>
                                </copy>
                                <copy todir="${staging.dir}/icons">
                                    <fileset dir="${basedir}/src/main/resources/de/erdesignerng/icons">
                                        <include name="**/erdesigner_*.png"/>
                                    </fileset>
                                </copy>
                                <copy todir="${staging.dir}/java3d">
                                    <fileset dir="${basedir}/java3d">
                                        <include name="**/*.dll"/>
                                        <include name="**/*.so"/>
                                    </fileset>
                                </copy>
                                <copy todir="${staging.dir}/reports">
                                    <fileset dir="${basedir}/reports">
                                        <include name="**/*.jasper"/>
                                        <include name="**/*.jrxml"/>
                                    </fileset>
                                </copy>
                                <copy todir="${staging.dir}/lib">
                                    <fileset dir="${basedir}/target">
                                        <include name="${project.artifactId}-${project.version}.jar"/>
                                    </fileset>
                                </copy>
                            </tasks>
                        </configuration>
                    </execution>
                    <execution>
                        <id>create-jpackage-area</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <copy todir="${jpackage.dir}">
                                    <fileset dir="${basedir}">
                                        <include name="*.txt"/>
                                    </fileset>
                                </copy>
                                <copy todir="${jpackage.dir}/java3d">
                                    <fileset dir="${basedir}/java3d">
                                        <include name="**/*.dll"/>
                                        <include name="**/*.so"/>
                                    </fileset>
