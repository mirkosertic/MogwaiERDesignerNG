<?xml version="1.0"?>
<assembly>
  <id>dist</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <includes>
        <include>*.txt</include>
        <include>*.bat</include>
        <include>*.sh</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>
	<fileSet>
      <directory>doc</directory>
      <outputDirectory>userdoc</outputDirectory>
      <includes>
        <include>*.pdf</include>
      </includes>
    </fileSet>    
	<fileSet>
      <directory>target/site/apidocs</directory>
      <outputDirectory>javadoc</outputDirectory>
    </fileSet>    
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>  
</assembly>