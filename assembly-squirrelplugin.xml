<?xml version="1.0"?>
<assembly>
	<id>squirrelplugin</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<includes>
				<include>*.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/squirrelplugin/resources
			</directory>
			<outputDirectory>plugins/mogwai</outputDirectory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>plugins/mogwai</outputDirectory>
			<includes>
				<include>RELEASENOTES.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>userdoc</directory>
			<outputDirectory>plugins/mogwai/userdoc
			</outputDirectory>
			<includes>
				<include>*.pdf</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>reports</directory>
			<outputDirectory>plugins/mogwai/reports
			</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>plugins/mogwai/ext
			</outputDirectory>
			<scope>runtime</scope>
			<excludes>
				<exclude>net.sourceforge.mogwai:mogwai-smartstart
				</exclude>
				<exclude>org.codehaus.izpack:izpack-standalone-compiler
				</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>plugins</outputDirectory>
			<scope>runtime</scope>
			<includes>
				<include>net.sourceforge.mogwai:mogwai-squirrelplugin
				</include>
			</includes>
			<outputFileNameMapping>mogwai.jar</outputFileNameMapping>
		</dependencySet>
	</dependencySets>
</assembly>