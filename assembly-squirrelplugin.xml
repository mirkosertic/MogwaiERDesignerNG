<?xml version="1.0"?>
<assembly>
  <id>squirrelplugin</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <includes>
        <include>*.txt</include>
      </includes>
    </fileSet>
	<fileSet>
      <directory>src/squirrelplugin/resources</directory>
      <outputDirectory>plugins/mogwai</outputDirectory>
      <includes>
        <include>*.*</include>
      </includes>
    </fileSet>   
	<fileSet>
      <outputDirectory>plugins/mogwai</outputDirectory>
      <includes>
        <include>RELEASENOTES.txt</include>
      </includes>
    </fileSet>   
	<fileSet>
      <directory>doc</directory>
      <outputDirectory>userdoc</outputDirectory>
      <includes>
        <include>*.pdf</include>
      </includes>
    </fileSet>    
	<fileSet>
      <directory>src</directory>
      <outputDirectory>src</outputDirectory>
    </fileSet>    
	<fileSet>
      <directory>target</directory>
      <outputDirectory>plugins</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>    
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>plugins</outputDirectory>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>  
</assembly>